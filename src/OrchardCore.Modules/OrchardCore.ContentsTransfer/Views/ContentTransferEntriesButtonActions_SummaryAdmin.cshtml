@using Microsoft.AspNetCore.Authorization
@using OrchardCore.ContentsTransfer

@inject IAuthorizationService AuthorizationService

@model ContentTransferEntryViewModel

@if (!await AuthorizationService.AuthorizeAsync(User, ContentTransferPermissions.DeleteContentTransferEntries))
{
    return;
}

<a asp-action="Delete" asp-controller="Admin" asp-route-area="@ContentTransferConstants.Feature.ModuleId" asp-route-entryId="@Model.ContentTransferEntry.EntryId" asp-route-returnUrl="@FullRequestPath" data-url-af="UnsafeUrl RemoveUrl" data-title=@T["Delete entry"] data-message=@T["Are you sure you want to delete this entry?"] data-ok-text="@T["Yes"]" data-cancel-text="@T["No"]" data-ok-class="btn-primary" class="dropdown-item btn-sm">@T["Delete"]</a>
